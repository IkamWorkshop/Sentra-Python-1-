import tkinter
import random  

ROWS = 25
COLS = 25
TILE_SIZE = 25

WINDOW_WIDTH = TILE_SIZE * COLS
WINDOW_HEIGHT = TILE_SIZE * ROWS

class Tile:
    def __init__(self, x, y, color=None):
        self.x = x
        self.y = y
        self.color = color

window = tkinter.Tk()
window.title("Uler Uleran")
window.resizable(False, False)

canvas = tkinter.Canvas(window, bg = "black", width = WINDOW_WIDTH, height = WINDOW_HEIGHT, borderwidth = 0, highlightthickness = 0)
canvas.pack()
window.update()
window.focus_set()

window_width = window.winfo_width()
window_height = window.winfo_height()
screen_width = window.winfo_screenwidth()
screen_height = window.winfo_screenheight()

window_x = int((screen_width/2) - (window_width/2))
window_y = int((screen_height/2) - (window_height/2))

window.geometry(f"{window_width}x{window_height}+{window_x}+{window_y}")

# Colors to avoid: black, red, yellow, green. Pick from other named colors.
def pick_color():
    candidates = ['white','blue','cyan','magenta','orange','pink','purple','brown','gray','navy','teal','lime']
    excluded = {'black','red','yellow','green'}
    choices = [c for c in candidates if c not in excluded]
    return random.choice(choices) if choices else 'blue'

snake = Tile(TILE_SIZE * 5, TILE_SIZE * 5, pick_color())
food1 = Tile(TILE_SIZE * 10, TILE_SIZE * 10)
food2 = Tile(TILE_SIZE * 10, TILE_SIZE * 10)
food3 = Tile(TILE_SIZE * 10, TILE_SIZE * 10)
velocityX = 0
velocityY = 0
snake_body = []
game_over = False
score = 0


def change_direction(e):
    global velocityX, velocityY, game_over
    # Allow restart with 'r' even when game over
    try:
        key = e.keysym.lower()
    except Exception:
        key = ''

    if key == 'r':
        restart()
        return

    if (game_over):
        return
    

    if (e.keysym == "Up" and velocityY != 1):
        velocityX = 0
        velocityY = -1
        
    elif (e.keysym == "Down" and velocityY != -1):
        velocityX = 0
        velocityY = 1

    elif (e.keysym == "Left" and velocityX != 1):
        velocityX = -1
        velocityY = 0

    elif (e.keysym == "Right" and velocityX != -1):
        velocityX = 1
        velocityY = 0


def move():
    global snake, food1, food2, food3, snake_body, game_over, score
    if (game_over):
        return
    
    if (snake.x < 0 or snake.x >= WINDOW_WIDTH or snake.y < 0 or snake.y >= WINDOW_HEIGHT):
        game_over = True
        return
    
    for tile in snake_body:
        if (snake.x == tile.x and snake.y == tile.y):
            game_over = True
            return
    
    if (snake.x == food1.x and snake.y == food1.y): 
        for _ in range(5):
            snake_body.append(Tile(food1.x, food1.y, pick_color()))
        food1.x = random.randint(0, COLS-1) * TILE_SIZE
        food1.y = random.randint(0, ROWS-1) * TILE_SIZE
        score += 5
    
    if (snake.x == food2.x and snake.y == food2.y): 
        for _ in range(5):
            snake_body.append(Tile(food2.x, food2.y, pick_color()))
        food2.x = random.randint(0, COLS-1) * TILE_SIZE
        food2.y = random.randint(0, ROWS-1) * TILE_SIZE
        score += 1

    if (snake.x == food3.x and snake.y == food3.y): 
        for _ in range(5):
            snake_body.append(Tile(food3.x, food3.y, pick_color()))
        food3.x = random.randint(0, COLS-1) * TILE_SIZE
        food3.y = random.randint(0, ROWS-1) * TILE_SIZE
        score += 3



    for i in range(len(snake_body)-1, -1, -1):
        tile = snake_body[i]
        if (i == 0):
            tile.x = snake.x
            tile.y = snake.y
        else:
            prev_tile = snake_body[i-1]
            tile.x = prev_tile.x
            tile.y = prev_tile.y
    
    snake.x += velocityX * TILE_SIZE
    snake.y += velocityY * TILE_SIZE


def restart():
    global snake, food1, food2, food3, velocityX, velocityY, snake_body, game_over, score
    # Reset snake and movement (head gets a fresh color)
    snake = Tile(TILE_SIZE * 5, TILE_SIZE * 5, pick_color())
    velocityX = 0
    velocityY = 0
    snake_body = []
    game_over = False
    score = 0

    # Reposition foods randomly
    food1.x = random.randint(0, COLS-1) * TILE_SIZE
    food1.y = random.randint(0, ROWS-1) * TILE_SIZE
    food2.x = random.randint(0, COLS-1) * TILE_SIZE
    food2.y = random.randint(0, ROWS-1) * TILE_SIZE
    food3.x = random.randint(0, COLS-1) * TILE_SIZE
    food3.y = random.randint(0, ROWS-1) * TILE_SIZE


def draw():
    global snake, food1, food2, food3, snake_body, game_over, score
    move()

    canvas.delete("all")

    canvas.create_rectangle(food1.x, food1.y, food1.x + TILE_SIZE, food1.y + TILE_SIZE, fill = 'red')
    canvas.create_rectangle(food2.x, food2.y, food2.x + TILE_SIZE, food2.y + TILE_SIZE, fill = 'green')
    canvas.create_rectangle(food3.x, food3.y, food3.x + TILE_SIZE, food3.y + TILE_SIZE, fill = 'yellow')
    
    canvas.create_rectangle(snake.x, snake.y, snake.x + TILE_SIZE, snake.y + TILE_SIZE, fill = (snake.color if getattr(snake, 'color', None) else 'blue'))

    for tile in snake_body:
        fill_color = tile.color if getattr(tile, 'color', None) else (snake.color if getattr(snake, 'color', None) else 'blue')
        canvas.create_rectangle(tile.x, tile.y, tile.x + TILE_SIZE, tile.y + TILE_SIZE, fill = fill_color)

    if (game_over):
        canvas.create_text(WINDOW_WIDTH/2, WINDOW_HEIGHT/2, font = "Arial 20", text = f"Game Over: {score}\nTekan R atau klik Restart untuk restart", fill = "white")
    else:
        canvas.create_text(50, 20, font = "Arial 10", text = f"Score: {score}\nImam I'tisham", fill = "white")

    
    window.after(100, draw)

restart()
draw()
# Add a Restart button
restart_button = tkinter.Button(window, text = "Restart", command = restart)
restart_button.pack(side='bottom', fill='x')
# Re-center window because its size changed when adding the button
window.update()
window_width = window.winfo_width()
window_height = window.winfo_height()
window_x = int((screen_width/2) - (window_width/2))
window_y = int((screen_height/2) - (window_height/2))
window.geometry(f"{window_width}x{window_height}+{window_x}+{window_y}")

window.bind("<KeyRelease>", change_direction)
window.mainloop()
